                    }
                },
                {
                    "name": "iotDB.notused",
                    "interfaceName": "IotDatabaseIface",
                    "classFullName": "com.signomix.out.db.H2RemoteIotDB",
                    "properties": {
                        "host": "$SIGNOMIX_DB_SERVER",
                        "dbfile": "/h2data/iot",
                        "file": "iot",
                        "test-query": "select * from serviceversion",
                        "version": "9",
                        "user": "sa",
                        "password": "",
                        "time-offset": "3600",
                        "cache-size": "1000"
                    }
                },
                {
                    "name": "iotDataDB.notused",
                    "interfaceName": "IotDataStorageIface",
