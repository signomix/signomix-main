                        "init":"Data3,SYSTEM,EVENT,CHECK_DEVICES,*15m,_|_;Data1,SIGNOMIX,EVENT,CLEAR_DATA,*40m,_|_;Data2,SIGNOMIX,EVENT,BACKUP,06:05:00 GMT|*24h,_"

                    }
